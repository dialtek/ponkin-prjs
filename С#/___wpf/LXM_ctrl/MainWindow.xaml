<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LXM_ctrl"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Name="main_window" x:Class="LXM_ctrl.MainWindow"
        mc:Ignorable="d"
        Title="LXM controller tool" Height="137.167" Width="511.333" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" >
    <Grid  x:Name="MainGrid" >
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
                <GradientStop Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Button x:Name="SettingsB" Content="Настройки" HorizontalAlignment="Left" Margin="401,22,0,0" VerticalAlignment="Top" Width="84" Click="SettingsB_Click" Height="32"/>
    </Grid>
</Window>
